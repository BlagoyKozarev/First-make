# Production Environment Variables
# Copy this file to .env and fill in your values

# =====================================
# Version Control
# =====================================
VERSION=latest  # Or specific tag like v1.0.0

# =====================================
# BgGpt API Configuration (REQUIRED)
# =====================================
BGGPT_USERNAME=your-username-here
BGGPT_PASSWORD=your-strong-password-here
BGGPT_API_KEY=your-api-key-here

# =====================================
# Monitoring (Optional)
# =====================================

# Grafana
GRAFANA_PASSWORD=change-this-secure-password

# Prometheus
PROMETHEUS_RETENTION=30d

# =====================================
# Security
# =====================================

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_REQUEST_SIZE_MB=100

# Request Timeouts
REQUEST_TIMEOUT_MINUTES=5

# =====================================
# Logging
# =====================================

# Log Level (Trace, Debug, Information, Warning, Error, Critical)
LOG_LEVEL=Information

# Log File Path
LOG_FILE_PATH=/logs

# =====================================
# Export Configuration
# =====================================

# Temporary export directory
EXPORT_TEMP_DIR=/var/tmp/firstmake

# Max concurrent exports
MAX_CONCURRENT_EXPORTS=5

# =====================================
# Database
# =====================================

# Cache expiration (days)
CACHE_EXPIRATION_DAYS=30

# Duplicate detection window (hours)
DUPLICATE_DETECTION_HOURS=1

# =====================================
# Docker Configuration
# =====================================

# Container registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your-docker-username
DOCKER_IMAGE_TAG=latest

# =====================================
# Nginx/SSL (Production)
# =====================================

# Domain name (if using SSL)
DOMAIN_NAME=firstmake.example.com

# SSL Certificate paths
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =====================================
# Backup Configuration
# =====================================

# Backup directory
BACKUP_DIR=/var/backups/firstmake

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# =====================================
# Email Notifications (Optional)
# =====================================

# SMTP Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@firstmake.example.com

# Admin email for notifications
ADMIN_EMAIL=admin@example.com
